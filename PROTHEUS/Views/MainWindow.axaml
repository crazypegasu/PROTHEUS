<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PROTHEUS.Views.MainWindow"
        Title="PROTHEUS - Visualizador de Câmeras"
        Width="1200" Height="800"
        Background="#1e1e1e">

    <DockPanel>

        <!-- Menu superior -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#333" Height="50" VerticalAlignment="Center">
            <TextBlock Text="  PROTHEUS" Foreground="White" FontSize="20" Margin="10,0"/>
            <Button x:Name="BtnConfiguracoes" Content="Configurações" Margin="10,0" Padding="10,5"/>
            <Button Content="Atualizar" Margin="10,0" Padding="10,5"/>
            <Button x:Name="BtnSair" Content="Sair" Margin="10,0" Padding="10,5"/>
        </StackPanel>

        <!-- Grade das Câmeras -->
        <UniformGrid Columns="4" Rows="2" Margin="10">
            <!-- Substituir depois pelos streamings reais -->
            <Border Background="Black" Margin="5" CornerRadius="5">
                <TextBlock Text="Câmera 1" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Background="Black" Margin="5" CornerRadius="5">
                <TextBlock Text="Câmera 2" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Background="Black" Margin="5" CornerRadius="5">
                <TextBlock Text="Câmera 3" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Background="Black" Margin="5" CornerRadius="5">
                <TextBlock Text="Câmera 4" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Background="Black" Margin="5" CornerRadius="5">
                <TextBlock Text="Câmera 5" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Background="Black" Margin="5" CornerRadius="5">
                <TextBlock Text="Câmera 6" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Background="Black" Margin="5" CornerRadius="5">
                <TextBlock Text="Câmera 7" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Background="Black" Margin="5" CornerRadius="5">
                <TextBlock Text="Câmera 8" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </UniformGrid>
    </DockPanel>
</Window>
